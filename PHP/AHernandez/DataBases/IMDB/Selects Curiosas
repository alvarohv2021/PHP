/* Nombre de los actores y todas las peliculas en las que participan
select Actores.name, Peliculas.name from Actores
join PeliculasActores on Actores.id = PeliculasActores.IdActor
join Peliculas on Peliculas.id = PeliculasActores.IdPelicula*/

//Actores de la pelicula seleccionada
select  Peliculas.name, Actores.name from Actores
join PeliculasActores on Actores.id = PeliculasActores.IdActor
join Peliculas on Peliculas.id = PeliculasActores.IdPelicula
where Peliculas.id=1

/*Nombre de as peliculas y numero de actores que articipan
select Peliculas.name,  count(PeliculasActores.IdActor)  from PeliculasActores
left join Peliculas on PeliculasActores.IdPelicula = Peliculas.id
group by IdPelicula*/

//Nombre de los directores y las peliculas en las qu ehan trabajado
select Directores.name from Peliculas
join Directores on Peliculas.DirectorID =Directores.id
where Peliculas.id=1